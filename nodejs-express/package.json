{
  "name": "xke-serverless-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec ts-node app/server.ts",
    "start:production": "node build/app/server.js",
    "build": "rm -rf ./build && tsc",
    "test": "NODE_ENV=test jest",
    "dynamodblocal:install": "node tests/scripts/dynamodblocal-install.js"
  },
  "dependencies": {
    "@types/express": "4.11.1",
    "@types/morgan": "^1.7.35",
    "aws-sdk": "^2.199.0",
    "body-parser": "1.18.2",
    "cors": "^2.8.4",
    "express": "4.16.2",
    "morgan": "^1.9.0",
    "serverless-http": "1.5.3",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "0.0.31",
    "@types/jest": "^22.2.0",
    "@types/winston": "2.3.7",
    "dynamodb-localhost": "0.0.5",
    "jest": "^22.4.2",
    "nodemon": "1.14.12",
    "serverless": "1.25.0",
    "serverless-offline": "3.16.0",
    "serverless-plugin-typescript": "1.1.5",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.1",
    "ts-node": "4.1.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
